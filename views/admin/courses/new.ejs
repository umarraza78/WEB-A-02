<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Course - Admin Dashboard</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="dashboard-container">
        <nav class="dashboard-nav">
            <div class="nav-header">
                <h2>Admin Dashboard</h2>
                <p>Add New Course</p>
            </div>
            <ul class="nav-links">
                <li><a href="/admin/courses">Courses</a></li>
                <li><a href="/admin/students">Students</a></li>
                <li><a href="/auth/logout">Logout</a></li>
            </ul>
        </nav>

        <main class="dashboard-main">
            <div class="page-header">
                <h1>Add New Course</h1>
                <a href="/admin/courses" class="btn-secondary">Back to Courses</a>
            </div>

            <% if (error) { %>
                <div class="error-message"><%= error %></div>
            <% } %>

            <form action="/admin/courses" method="POST" class="course-form">
                <div class="form-group">
                    <label for="code">Course Code:</label>
                    <input type="text" id="code" name="code" required value="<%= formData ? formData.code : '' %>">
                </div>

                <div class="form-group">
                    <label for="name">Course Name:</label>
                    <input type="text" id="name" name="name" required value="<%= formData ? formData.name : '' %>">
                </div>

                <div class="form-group">
                    <label for="department">Department:</label>
                    <input type="text" id="department" name="department" required value="<%= formData ? formData.department : '' %>">
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="credits">Credits:</label>
                        <input type="number" id="credits" name="credits" min="1" max="6" required
                            value="<%= formData ? formData.credits : '' %>">
                    </div>
                    <div class="form-group">
                        <label for="level">Level:</label>
                        <input type="number" id="level" name="level" min="1" max="4" required
                            value="<%= formData ? formData.level : '' %>">
                    </div>
                </div>

                <div class="form-group">
                    <label for="description">Description:</label>
                    <textarea id="description" name="description" required><%= formData ? formData.description : '' %></textarea>
                </div>

                <div class="form-group">
                    <label for="instructor">Instructor:</label>
                    <input type="text" id="instructor" name="instructor" required value="<%= formData ? formData.instructor : '' %>">
                </div>

                <div class="form-group">
                    <label>Days:</label>
                    <div class="checkbox-group">
                        <% const days = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday']; %>
                        <% days.forEach(day => { %>
                            <label class="checkbox-label">
                                <input type="checkbox" name="days" value="<%= day %>" 
                                    <%= formData && formData.days && formData.days.includes(day) ? 'checked' : '' %>>
                                <%= day %>
                            </label>
                        <% }); %>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="startTime">Start Time:</label>
                        <input type="time" id="startTime" name="startTime" required value="<%= formData ? formData.startTime : '' %>">
                    </div>

                    <div class="form-group">
                        <label for="endTime">End Time:</label>
                        <input type="time" id="endTime" name="endTime" required value="<%= formData ? formData.endTime : '' %>">
                    </div>
                </div>

                <div class="form-group">
                    <label for="room">Room:</label>
                    <input type="text" id="room" name="room" required value="<%= formData ? formData.room : '' %>">
                </div>

                <div class="form-group">
                    <label for="seats">Available Seats:</label>
                    <input type="number" id="seats" name="seats" required min="1" value="<%= formData ? formData.seats : '30' %>">
                </div>

                <div class="form-group">
                    <label for="prerequisites">Prerequisites (comma-separated):</label>
                    <input type="text" id="prerequisites" name="prerequisites" value="<%= formData ? formData.prerequisites : '' %>">
                </div>

                <div class="form-group">
                    <label for="semester">Semester:</label>
                    <input type="text" id="semester" name="semester" required value="<%= formData ? formData.semester : '' %>">
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-primary">Create Course</button>
                    <a href="/admin/courses" class="btn-secondary">Cancel</a>
                </div>
            </form>
        </main>
    </div>
</body>
</html> 